    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="What is the process for getting paid for my work?"-->
    <!--        android:textStyle="bold"-->
    <!--        android:textSize="18sp"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:padding="16dp"/>-->

    <!-- How can I report fraud or scam job postings on the app? -->



    <!-- How does the app protect my personal information? -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How does the app protect my personal information?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/mainTextView4"
        android:textColor="@color/black"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/extraTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The app prioritizes user privacy and implement robust data protection measures to safeguard personal information shared by workers. This can include encryption of sensitive data, secure storage practices, and compliance with data protection regulations."
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
